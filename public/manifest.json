{
  "manifest_version": 3,
  "name": "ChatGPT Chrome Extension",
  "version": "1.0",
  "description": "Chat with ChatGPT using your API key",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
  
}
